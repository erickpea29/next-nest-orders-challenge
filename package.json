{
  "name": "next-nest-orders-challenge",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "postinstall": "npm --workspaces run postinstall || true",
    "build": "npm --workspaces run build",
    "dev": "concurrently -k -n api,web -c green,cyan \"npm --workspace apps/api run start:dev\" \"npm --workspace apps/web run dev\"",
    "lint": "npm --workspaces run lint",
    "test": "npm --workspaces run test"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.6.3"
  }
}
